console:
  max_message_size_bytes: 409600
logger:
  level: "DEBUG"
session:
  token_expiry_sec: 7200 # 2 hours
socket:
  max_message_size_bytes: 4096 # reserved buffer
  max_request_size_bytes: 131072
runtime:
  http_key: "testkey123"  # HTTP key for S2S authentication (matches test scripts)
  env:
    - "EDGEGAP_API_URL=https://api.edgegap.com"
    - "EDGEGAP_API_TOKEN=token changeme"
    - "EDGEGAP_APPLICATION=nakama"
    - "INITIAL_EDGEGAP_VERSION=sample"  # Initial version to use when no version exists in storage (required for first deployment)
    - "EDGEGAP_PORT_NAME=game"
    - "NAKAMA_ACCESS_URL=https://changeme.nakamacloud.io"
    # - "EDGEGAP_POLLING_INTERVAL=15m"
    # - "NAKAMA_CLEANUP_INTERVAL=1m"
    # - "NAKAMA_RESERVATION_MAX_DURATION=30s"
